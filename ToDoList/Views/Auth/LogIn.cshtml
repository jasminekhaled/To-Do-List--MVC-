@model ToDoList_DomainModel.ViewModels.Auth.LogInViewModel

@{
    ViewData["Title"] = "LogIn";
}

<form asp-controller="Auth" asp-action="LogIn" class="row-cols-2">
    <div class="form-group">
        <label asp-for="LogInDto.UserName" class="form-label mt-4"></label>
        <input type="text" class="form-control" asp-for="LogInDto.UserName" placeholder="Enter User Name">
        <span asp-validation-for="LogInDto.UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LogInDto.Password" class="form-label mt-4"></label>
        <input type="password" asp-for="LogInDto.Password" class="form-control" placeholder="Enter Password">
        <span asp-validation-for="LogInDto.Password" class="text-danger"></span>
    </div>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p style="color:red">@Model.ErrorMessage</p>
    }
    <button type="submit" class="btn btn-primary col-1 mt-3 mb-3">Submit</button>
    <br />
    <span>Don't have an account? <a asp-controller="Auth" asp-action="SignUp">SignUp</a></span>
    <br />
    <a class="mt-3" asp-controller="Auth" asp-action="ForgetPassword">ForgetPassword</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
